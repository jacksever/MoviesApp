@model MoviesApp.ViewModels.DeleteActorViewModel

@{
	ViewData["Title"] = "Delete Actor";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			<label>First Name</label>
		</dt>
		<dd class="col-sm-10">
			@Model.FirstName
		</dd>
		<dt class="col-sm-2">
			<label>Last Name</label>
		</dt>
		<dd class="col-sm-10">
			@Model.LastName
		</dd>
		<dt class="col-sm-2">
			<label asp-for="Age"></label>
		</dt>
		<dd class="col-sm-10">
			@Model.Age
		</dd>
		<dt class="col-sm-2">
			<label asp-for="Birthday"></label>
		</dt>
		<dd class="col-sm-10">
			@Model.Birthday.ToString("dd.MM.yyyy")
		</dd>
		<dt class="col-sm-2">
			<label asp-for="Town"></label>
		</dt>
		<dd class="col-sm-10">
			@Model.Town
		</dd>
	</dl>

	<form asp-action="Delete">
		<input type="submit" value="Delete" class="btn btn-danger" />
	</form>
	<hr />
	<a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>